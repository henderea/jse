{
  "name": "@henderea/jse",
  "version": "0.6.5",
  "description": "JavaScript Executor",
  "main": "dist/api/index.js",
  "types": "types.d.ts",
  "repository": "git@github.com:henderea/jse.git",
  "author": "Eric Henderson <henderea@gmail.com>",
  "license": "MIT",
  "scripts": {
    "ncc:build": "yarn ncc:build:release",
    "ncc:clean": "rm -rf dist",
    "ncc:post-clean": "rm -rf dist/**/*.hbs && rm -rf dist/**/locales",
    "ncc:build:release:build:cli": "my-ncc src/jse.mjs -m -q -o dist/cli",
    "ncc:build:debug:build:cli": "my-ncc src/jse.mjs -q -o dist/cli",
    "ncc:build:release:build:api": "my-ncc src/api.mjs -m -q -o dist/api",
    "ncc:build:debug:build:api": "my-ncc src/api.mjs -q -o dist/api",
    "ncc:build:release": "yarn ncc:clean && yarn ncc:build:release:build:cli && yarn ncc:build:release:build:api && yarn ncc:post-clean",
    "ncc:build:debug": "yarn ncc:clean && yarn ncc:build:debug:build:cli && yarn ncc:build:debug:build:api && yarn ncc:post-clean",
    "prepublishOnly": "yarn ncc:build",
    "lint": "eslint --ext .js,.mjs bin src lib",
    "lint:fix": "eslint --ext .js,.mjs --fix bin src lib"
  },
  "bin": {
    "jse": "bin/jse.js"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.4",
    "@henderea/my-ncc": "^1.3.2",
    "@henderea/simple-colors": "^2.0.2",
    "any-shell-escape": "^0.1.1",
    "escalade": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-henderea": "1.0.8",
    "eslint-plugin-import": "^2.24.2",
    "lodash": "^4.17.21",
    "natural-orderby": "^2.0.3",
    "yargs": "16.2.0"
  },
  "eslintConfig": {
    "extends": "henderea",
    "ignorePatterns": "**/*.ts"
  }
}
